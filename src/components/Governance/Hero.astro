---
import Header from "../Header.astro";

const { data } = Astro.props;
---

<Header>
  <section class="text-center">
    {data.main_title && <h1 class="text-[2em] mb-[5px]">{data.main_title}</h1>}
    {
      data.main_body && (
        <p class="leading-normal  w-full text-lg">{data.main_body}</p>
      )
    }
  </section>
</Header>
